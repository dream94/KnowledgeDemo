<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cc.knowldegedemo.MainActivity">

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#0000ff">

        <com.example.cc.view.CornerView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"></com.google.android.flexbox.FlexboxLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="textView" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_hint"
            android:textColor="@android:color/holo_red_light"
            android:text="123123"
            android:layout_centerInParent="true" />

        <com.example.cc.view.CoverageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/coverage_view" />
    </RelativeLayout>

</LinearLayout>
